@{
    if (ViewBag.ShowNotificacao == null)
    {
        ViewBag.ShowNotificacao = false;
    }
}

<!DOCTYPE html>
<html lang="pt-br">
<head>
    <title>@ViewBag.Title</title>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <link rel="icon" type="image/png" href="~/Content/images/icons/Icones-06.png">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no">

    <link href="~/Content/perfect-scroll/perfect-scrollbar.v1.css" rel="stylesheet" />
    <link href="~/Content/css/circle.css" rel="stylesheet" />
    <link href="~/Content/modal/modal.v5.css" rel="stylesheet" />
    <link href="~/Content/css/matriz-habilidade.v40.css" rel="stylesheet" />

    @RenderSection("css", required: false)

</head>
<body>

    <div class="header flex-row">
        <div>
            <h1>Novelis</h1>
        </div>
        <div class="button-container flex-row">@RenderSection("buttons", false)</div>
        <div>
            <img src="~/Content/images/Novelis_Logo_100_white.jpg" />
        </div>
    </div>

    <div class="line"></div>

    <div id="Background"></div>

    @RenderBody()

    <script src="~/Content/perfect-scroll/perfect-scrollbar.min.js"></script>
    <script src="~/Content/perfect-scroll/perfect-scroll.init.js"></script>

    <script src="~/Content/modal/modal.v3.js"></script>

    <script src="~/Content/js/main.v6.js"></script>

    @RenderSection("js", required: false)

</body>
</html>